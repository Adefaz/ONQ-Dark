{
  "manifest_version": 2,
  "name": "Learn Darklight",
  "version": "0.0.5",
  "author": "Zijian Shao",
  "browser_action": {
    "default_icon": {
      "16": "icon/icon16.png",
      "24": "icon/icon24.png",
      "32": "icon/icon32.png"
    },
    "default_popup": "html/popup.html",
    "default_title": "Learn Darklight"
  },
  "content_scripts": [
    {
      "js": [
        "js/jquery.js",
        "js/configs.js",
        "js/init.js"
      ],
      "matches": [
        "*://learn.uwaterloo.ca/*"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "js": [
        "js/init_idle.js"
      ],
      "matches": [
        "*://learn.uwaterloo.ca/*"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "description": "Darklight takes back the classic dark theme for Waterloo Learn.",
  "icons": {
    "128": "icon/icon128.png",
    "16": "icon/icon16.png",
    "48": "icon/icon48.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "*://learn.uwaterloo.ca/*"
  ],
  "short_name": "Learn Darklight",
  "web_accessible_resources": [
    "js/*",
    "css/*",
    "icon/*",
    "img/*"
  ],
  "applications": {
    "gecko": {
      "id": "learndarklight@zijianshao.com",
      "strict_min_version": "42.0"
    }
  }
}
